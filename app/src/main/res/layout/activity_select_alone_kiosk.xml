<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectAloneKioskActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:src="@drawable/introkidoname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/AloneFF_btn"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/introkidoname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageButton
        android:id="@+id/AloneTransport_btn"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="44dp"
        android:src="@drawable/introkidoname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageButton
        android:id="@+id/AloneCafe_btn"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="44dp"
        android:src="@drawable/introkidoname"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AloneFF_btn"
        app:layout_constraintVertical_bias="0.39" />

    <ImageButton
        android:id="@+id/AloneMovie_btn"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginEnd="44dp"
        android:src="@drawable/introkidoname"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AloneTransport_btn"
        app:layout_constraintVertical_bias="0.39" />



</androidx.constraintlayout.widget.ConstraintLayout>